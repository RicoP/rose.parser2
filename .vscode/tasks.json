{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++17",
                "/I${workspaceFolder}/externals/mpc",
                "/I${workspaceFolder}/include",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                //"${workspaceFolder}/externals/mpc/mpc.c",
                "${workspaceFolder}/test/mpc.proxy.c",
                "${file}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Clean",
            "command": "Remove-Item",
            "args": [
                "*.obj,",
                "*.pdb",
                "*.ilk",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
            "group": {
                "kind": "build",
            }
        },
    ],
    "version": "2.0.0"
}